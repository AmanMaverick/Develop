<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

   <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss} %5p %c{1} - %m%n"/>
      </layout>
   </appender>

        <appender name="file" class="org.apache.log4j.RollingFileAppender">
	   <param name="append" value="false" />
	   <param name="maxFileSize" value="10MB" />
	   <param name="maxBackupIndex" value="5" />
	   <!-- For Tomcat -->
	   <param name="file" value="/Operations/Oracle/Middleware/user_projects/domains/Operations_Recovery/logs/Recovery.log" />
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
			value="%d{dd MMM yyyy HH:mm:ss} %5p %c{1} - %m%n" />
	   </layout>
	</appender>
        
        <appender name="AuditLOG" class="org.apache.log4j.RollingFileAppender">
	   <param name="append" value="false" />
	   <param name="maxFileSize" value="10MB" />
	   <param name="maxBackupIndex" value="5" />
	    
	   <param name="file" value="/Operations/Oracle/Middleware/user_projects/domains/Operations_Recovery/logs/NIOAudit.log" />
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" 
			value=" %d{dd MMM yyyy HH:mm:ss} %5p %c{1} - %m%n" />
	   </layout>
	</appender>
        <logger name="AuditLogFile">
            <level value="DEBUG"/>
            <appender-ref ref="AuditLOG"/>
        </logger>
   <root>
      <level value="DEBUG"/>
      <appender-ref ref="consoleAppender"/>
      <appender-ref ref="file"/>
   </root>

</log4j:configuration>